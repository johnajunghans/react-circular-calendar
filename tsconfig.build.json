{
  "extends": "./tsconfig.app.json",
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "outDir": "./dist/types",
    "noEmit": false,
    "rootDir": "./src"
  },
  "include": ["src/**/*"],
  "exclude": [
    "src/**/*.test.*",
    "src/**/*.spec.*",
    "src/**/__tests__/**",
    "src/App.tsx",
    "src/main.tsx"
  ]
}

